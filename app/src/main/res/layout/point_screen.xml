<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_high_score_top"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_score"
        />
    <TextView
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_1."
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:layout_below="@id/text_view_high_score_top"
        android:layout_toLeftOf="@+id/text_view_1_points"
        android:layout_toStartOf="@+id/text_view_1_points"
        />
    <TextView
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_1_points"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_900_points"
        android:layout_below="@+id/text_view_high_score_top"
        />
    <TextView
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_2."
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2."
        android:layout_below="@id/text_view_1."
        android:layout_toLeftOf="@id/text_view_2."
        android:layout_toStartOf="@id/text_view_2_points"
        />
    <TextView
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_2_points"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="800 points"
        android:layout_below="@id/text_view_1_points"
        />
    <TextView
        android:id="@+id/text_view_3."
        android:layout_below="@id/text_view_2."
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/text_view_3_points"
        android:text="3."
        />
    <TextView
        android:id="@+id/text_view_3_points"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="750 points"
        android:layout_below="@+id/text_view_2_points"
        android:layout_alignLeft="@+id/text_view_2_points"
        android:layout_alignStart="@+id/text_view_2_points"
        />
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_4."
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/text_view_4_points"
        android:layout_below="@id/text_view_3."
        android:text="4."
        />
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/text_view_4_points"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="700 points"
        android:layout_below="@+id/text_view_3_points"
        android:layout_alignLeft="@+id/text_view_2_points"
        android:layout_alignStart="@+id/text_view_2_points"
        />
</RelativeLayout>